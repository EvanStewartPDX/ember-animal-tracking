<form {{action 'updateMap' on='submit'}}>

  <div class='form-group'>
    <label for='address'>Address</label>
    {{input id='address' value=address required=true type=text class='form-control'}}
  </div>

  <button class='btn btn-success' type='submit'>Submit</button>
</form>

<h3>Add marker</h3>
<form {{action 'addMarker' on='submit'}}>

  <div class='form-group'>
    <label for='lat'>Lat</label>
    {{input id='mlat' value=mlat required=true type=text class='form-control'}}
  </div>

  <div class='form-group'>
    <label for='lng'>Lng</label>
    {{input id='mlng' value=mlng required=true type=text class='form-control'}}
  </div>

  <div class='form-group'>
    <label for='title'>Title</label>
    {{input id='title' value=title required=true type=text class='form-control'}}
  </div>

  <button class='btn btn-success' type='submit'>Submit</button>
</form>


<div class="map-canvas"></div>
