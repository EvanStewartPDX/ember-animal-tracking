{{#if addNewReply}}
<div class="well">
<h1>New Reply</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content"}}
      </div>
      <button {{action 'saveReply'}}>Save</button>
      <button type="button" class="close" data-dismiss="modal" aria-hidden='true' {{action 'hideReplyForm'}}><span class='glyphicon glyphicon-remove' style="color: red"></span></button>
    </form>
  </div>
  </div>
{{else}}
  <button class="btn btn-success"{{action 'replyFormShow'}}>New reply</button>
{{/if}}
